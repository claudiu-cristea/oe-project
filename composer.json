{
  "name": "ec-europa/poc-project",
  "description": "Drupal 8 proof of concept: Project template.",
  "type": "project",
  "license": "EUPL-1.1",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "composer/installers": "^1.2",
    "drupal-composer/drupal-scaffold": "^2.2",
    "cweagans/composer-patches": "~1.0",
    "drupal/core": "~8.0",
    "drush/drush": "~8.0",
    "drupal/console": "~1.0",
    "drupal/coffee": "1.0-beta2",
    "ec-europa/poc_profile": "*",
    "ec-europa/poc-robo": "*"
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsstream": "~1.2",
    "phpunit/phpunit": ">=4.8.28 <5",
    "symfony/css-selector": "~2.8",
    "ec-europa/poc-code-review": "*",
    "ec-europa/poc-behat": "*"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "repositories": [
    { "type": "composer", "url": "https://packages.drupal.org/8" },
    { "type": "git", "url": "https://github.com/ec-europa/poc_profile.git" },
    { "type": "git", "url": "https://github.com/ec-europa/poc-code-review.git" },
    { "type": "git", "url": "https://github.com/ec-europa/poc-behat.git" },
    { "type": "git", "url": "https://github.com/ec-europa/poc-robo.git" },
    { "type": "path", "url": "./custom/modules"},
    { "type": "path", "url": "./custom/themes"}
  ],
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "post-install-cmd": ["@drupal-scaffold"],
    "post-update-cmd": ["@drupal-scaffold"]
  },
  "extra": {
    "installer-paths": {
      "build/core": ["type:drupal-core"],
      "build/libraries/{$name}": ["type:drupal-library"],
      "build/modules/contrib/{$name}": ["type:drupal-module"],
      "build/profiles/contrib/{$name}": ["type:drupal-profile"],
      "build/themes/contrib/{$name}": ["type:drupal-theme"]
    }
  }
}
